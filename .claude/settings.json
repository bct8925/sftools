{
    "permissions": {
        "allow": [
            "Edit",
            "Write",
            "Bash(openspec:*)",
            "Bash(sf org list:*)",
            "Bash(sf data query:*)"
        ]
    },
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/block-dangerous.sh"
                    }
                ]
            },
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/validate-on-commit.sh"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/fix-on-write.sh"
                    }
                ]
            }
        ]
    }
}
