{
  "manifest_version": 3,
  "name": "sftools",
  "version": "2.3.0",
  "description": "Developer tools for Salesforce",
  "icons": {
    "16": "dist/icons/icon-16.png",
    "32": "dist/icons/icon-32.png",
    "48": "dist/icons/icon-48.png",
    "128": "dist/icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "dist/icons/icon-16.png",
      "32": "dist/icons/icon-32.png",
      "48": "dist/icons/icon-48.png"
    }
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "notifications",
    "nativeMessaging"
  ],
  "side_panel": {
    "default_path": "dist/pages/app/app.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*"
      ],
      "matches": [
        "*://*.salesforce.com/*",
        "*://*.force.com/*",
        "*://*.lightning.force.com/*",
        "*://*.my.salesforce.com/*",
        "*://*.visualforce.com/*",
        "*://*.salesforce-sites.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self'"
  },
  "oauth2": {
    "client_id": "3MVG97L7PWbPq6UzVRgT5Rg8IBlXwjgq8JGCyYoI6n53KYt2KXhokiQmkRq2gGAnFE0sZKp_5lDZpWG0GBhhm",
    "scopes": []
  },
  "key": ""
}