{
  "manifest_version": 3,
  "name": "Salesforce Dev Tools",
  "version": "1.0",
  "description": "Developer tools for Salesforce, combining API testing, dev console, and Aura debugging.",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "cookies",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*", "src/callback/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self'"
  },
  "oauth2": {
    "client_id": "3MVG99OxTyEMCQ3ipt3qRQgxCzFjNU7JCZDeTf2Mq_rIFVPgASjAq9r4E.2yUKcVx0isUR08zZQ3q45UGjQlX",
    "scopes": []
  },
  "key": ""
}