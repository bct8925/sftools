{
  "devDependencies": {
    "vite": "^7.2.7",
    "playwright": "^1.50.0",
    "dotenv": "^16.4.7",
    "glob": "^11.0.0",
    "tsx": "^4.19.2",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "jsdom": "^24.0.0"
  },
  "dependencies": {
    "@jetstreamapp/soql-parser-js": "^6.3.1",
    "@salesforce-ux/icons": "^10.5.4",
    "dompurify": "^3.3.1",
    "monaco-editor": "^0.55.1"
  },
  "scripts": {
    "build": "SFTOOLS_PRODUCTION=false vite build",
    "watch": "SFTOOLS_PRODUCTION=false vite build --watch",
    "package": "SFTOOLS_PRODUCTION=true vite build && rm -f sftools.zip && zip -r sftools.zip dist manifest.json rules.json sftools-proxy -x 'sftools-proxy/node_modules/*'",
    "test": "tsx tests/frontend/run-tests.ts",
    "test:frontend": "tsx tests/frontend/run-tests.ts",
    "test:slow": "tsx tests/frontend/run-tests.ts --slow",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage"
  }
}
